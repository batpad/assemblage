# Environment variables for Assemblage Django application
# Copy this file to /home/assemblage/assemblage/.env and configure

# Django settings
SECRET_KEY=your-secret-key-here-generate-a-strong-random-key
DEBUG=False

# Allowed hosts (comma-separated, no spaces)
# Examples: yourdomain.com,www.yourdomain.com,your-server-ip
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# CSRF trusted origins (comma-separated)
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Database settings (if using PostgreSQL)
# DB_NAME=assemblage
# DB_USER=assemblage
# DB_PASSWORD=your-database-password
# DB_HOST=localhost
# DB_PORT=5432

# Email configuration (for error notifications)
# Format: Name:email@example.com,Name2:email2@example.com
ADMINS=Admin:admin@your-domain.com

# SMTP settings for sending emails
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# Security
SECURE_SSL_REDIRECT=True

# Timezone
TIME_ZONE=America/Chicago

# Optional: Sentry error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Optional: Application-specific settings
# MEDIA_MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
# THUMBNAIL_DEBUG=False